datasource db {
  provider = "sqlite" // Puedes cambiar a "postgresql", "mysql", etc.
  url      = "file:./dev.db"
}

generator client {
  provider = "prisma-client-js"
}

model User {
  id       Int     @id @default(autoincrement())
  name     String
  email    String  @unique
  password String
  votes    Vote[]
}

model Vote {
  id        Int      @id @default(autoincrement())
  category  String
  nominee   String
  user      User     @relation(fields: [userId], references: [id])
  userId    Int
  createdAt DateTime @default(now())
}
